<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button android:id="@+id/bt_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer" />

    <LinearLayout
        android:id="@+id/lv_number"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">
        <GridView
            android:id="@+id/gv_numbers"
            android:numColumns="4"
            android:gravity="center"
            android:columnWidth="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </GridView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_formula"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1">
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_gravity="center"
            android:id="@+id/grid_view_formula"
            android:numColumns="11"
            android:gravity="center"
            android:columnWidth="30dp"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </GridView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv_operator"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="50dp">
        <GridView
            android:id="@+id/gv_operators"
            android:numColumns="6"
            android:gravity="center"
            android:columnWidth="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </GridView>

    </LinearLayout>

</LinearLayout>
