<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:orientation="vertical" >
        <Button android:id="@+id/bt_multification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Multification"/>

        <Button android:id="@+id/bt_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Division" />
        <TextView android:id="@+id/tv_makenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose number to make" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radiogroup_makenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton android:id="@+id/rd_maketwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make 12 with 3 numbers" />
            <RadioButton android:id="@+id/rd_makeeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make 18 with 3 numbers" />
            <RadioButton android:id="@+id/rd_makefour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="make 24 with 4 numbers" />
        </RadioGroup>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup_makenumber"
        android:layout_marginTop="10dp"
        android:id="@+id/chooseBtn"
        android:text="Choose" />

    </LinearLayout>

</LinearLayout>
